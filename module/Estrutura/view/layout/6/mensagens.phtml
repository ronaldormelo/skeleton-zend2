<?php$sucesso = $this->flashMessenger()        ->setMessageOpenFormat('<div%s><span>')        ->setMessageSeparatorString('</span><span>')        ->setMessageCloseString('</span></div>')        ->render(\Zend\Mvc\Controller\Plugin\FlashMessenger::NAMESPACE_SUCCESS);$error = $this->flashMessenger()        ->setMessageOpenFormat('<div%s><span>')        ->setMessageSeparatorString('</span><span>')        ->setMessageCloseString('</span></div>')        ->render(\Zend\Mvc\Controller\Plugin\FlashMessenger::NAMESPACE_ERROR);$info = $this->flashMessenger()        ->setMessageOpenFormat('<div%s><span>')        ->setMessageSeparatorString('</span><span>')        ->setMessageCloseString('</span></div>')        ->render(\Zend\Mvc\Controller\Plugin\FlashMessenger::NAMESPACE_INFO);$alert = $this->flashMessenger()        ->setMessageOpenFormat('<div%s><span>')        ->setMessageSeparatorString('</span><span>')        ->setMessageCloseString('</span></div>')        ->render(\Zend\Mvc\Controller\Plugin\FlashMessenger::NAMESPACE_WARNING);?><?php if ($sucesso || $error || $info || $alert) : ?>    <div class="container-alertas">        <?php if ($sucesso) : ?>            <div class="bs-callout bs-callout-success">                <span class="glyphicon glyphicon-exclamation-sign"></span>                <?php echo $sucesso; ?>            </div>            <?php        endif;        if ($info) :            ?>            <div class="bs-callout bs-callout-info">                <span class="glyphicon glyphicon-exclamation-sign"></span>                <?php echo $info; ?>            </div>            <?php        endif;        if ($error) :            ?>            <div class="bs-callout bs-callout-danger">                <span class="glyphicon glyphicon-exclamation-sign"></span>                <?php echo $error; ?>            </div>            <?php        endif;        if ($alert) :            ?>            <div class="bs-callout bs-callout-warning">                <span class="glyphicon glyphicon-exclamation-sign"></span>                <?php echo $alert; ?>            </div>        <?php endif; ?>    </div><?php endif; ?>